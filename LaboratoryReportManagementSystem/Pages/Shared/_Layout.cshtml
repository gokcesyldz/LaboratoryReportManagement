<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaboratoryReportManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaboratoryReportManagementSystem.styles.css" asp-append-version="true" />
</head>

    <style>
    body{
        background-color: #f5f5f5;
}
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><h2> Laboratuvar Raporlama </h2></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                &nbsp&nbsp&nbsp
                &nbsp&nbsp&nbsp

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <button type="button" class="btn btn-outline-primary">
                                <a class="nav-link text-dark" href="/Index">Anasayfa</a>
                            </button>
                        </li>
                        &nbsp&nbsp&nbsp

                        <li class="nav-item">
                            <button type="button" class="btn btn-outline-primary">
                                <a class="nav-link text-dark" href="/Privacy">Privacy</a>
                            </button>
                        </li>
                        &nbsp&nbsp&nbsp

                        <li class="nav-item">
                            <button type="button" class="btn btn-outline-primary">
                            <a class="nav-link text-dark" href="/Laborants/Index">Laborant</a>
                            </button>
                        </li>
                        &nbsp&nbsp&nbsp

                        <li class="nav-item">
                            <button type="button" class="btn btn-outline-primary">
                                <a class="nav-link text-dark" href="/Reports/Index">Report</a>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - LaboratoryReportManagementSystem - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
   
</body>
</html>