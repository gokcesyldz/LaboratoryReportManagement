@page "{id:int}"
@model LaboratoryReportManagementSystem.Pages.Laborants.UpdateModel

<h2>Laborant Bilgilerini Güncelle</h2>

<form method="post">
    <input type="hidden" asp-for="LaborantModel.Id" class="form-control" />

    <div class="form-group">
        <label for="FirstName">Adı</label>
        <input type="text" asp-for="LaborantModel.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="LastName">Soyadı</label>
        <input type="text" asp-for="LaborantModel.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="HospitalId">Hastane Kimlik Numarası</label>
        <input type="text" asp-for="LaborantModel.HospitalNumber" class="form-control" />
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
